@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string lsErrorDetails = ViewBag.ErrorDetails;
}
<div>
    <table align="center">
        <tr><td colspan="4">An error occurred while processing your request.</td></tr>
        @if (lsErrorDetails != "")
        {
            <tr><td colspan="4"><a href="javascript:void(0);" onclick="$('#error').show();">Click here to view details</a></td></tr>
            <tr><td colspan="4"><div id="error" style="display:none">@lsErrorDetails</div></td></tr>
        }
    </table>

</div>

